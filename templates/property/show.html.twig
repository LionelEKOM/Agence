{% extends 'base.html.twig' %}

{% block title %}Details proprietes{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                
            </div>

            <div class="col-md-4">
                <h1>{{ property.title }}</h1>
                <h2>{{ property.rooms }} pieces - {{ property.surface }} m2</h2>
                <div class="text-primary" style="font-size: 4rem; font-weight: bold;">{{ property.price | number_format (0, '', ' ')}} FCFA</div>
                <a href="" class="btn btn-primary">Contacter l'agence</a>
            </div>
        </div>

        <p>
            {{ property.description | nl2br }}
        </p>

        <div class="row">
            <div class="col-md-8">
                <h2>Caracteristiques</h2>
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <td>Surface habitable</td>
                            <td>{{ property.surface }}</td>
                        </tr>
                        <tr>
                            <td>Pieces</td>
                            <td>{{ property.rooms }}</td>
                        </tr>
                        <tr>
                            <td>Chambre</td>
                            <td>{{ property.bedroom }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    
        <table class="table">
            <tbody>
                <tr>
                    <th>City</th>
                    <td>{{ property.city }}</td>
                </tr>
                <tr>
                    <th>Sold</th>
                    <td>{{ property.sold ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>Created_at</th>
                    <td>{{ property.createdAt ? property.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>
    
        <a href="{{ path('app_property_index') }}">back to list</a>
    
        <a href="{{ path('app_property_edit', {'id': property.id}) }}">edit</a>
    
        {{ include('property/_delete_form.html.twig') }}
    </div>
{% endblock %}
