{% extends 'base.html.twig' %}

{% block title %}Option index{% endblock %}

{% block body %}
    <div class="container">
        {% for type, messages in app.flashes() %}
        <div class="">
            {% for message in messages %}
            <div class=" text-center alert alert-{{ type }}" role="alert">
                {{ message }}
            </div>
            {% endfor %}
        </div>
        {% endfor %}

        <h1>Gerer les Options</h1>        
        <hr class="border border-danger border-2 opacity-50">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for option in options %}
                <tr>
                    <td>{{ option.name }}</td>
                    <td class="d-flex">
                        {# <a class="btn btn-secondary" href="{{ path('app_admin_option_show', {'id': option.id}) }}">
                            <i class="fa-solid fa-up-right-from-square"></i>
                        </a> #}
                        <a class="btn btn-primary" href="{{ path('app_admin_option_edit', {'id': option.id}) }}">
                            Editer
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-end"> <a class="btn btn-primary" href="{{ path('app_admin_option_new') }}">
            Creer un nouveau bien</a>
        </div>
        {# <a href="{{ path('app_admin_option_new') }}">Create new</a> #}
    </div>
{% endblock %}
