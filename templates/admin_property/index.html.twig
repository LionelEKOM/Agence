{% extends 'base.html.twig' %}

{% block title %}Gerer les Biens{% endblock %}

{% block body %}
    <div class="container mt-3">
        {% for type, messages in app.flashes() %}
        <div class="">
            {% for message in messages %}
            <div class=" text-center alert alert-{{ type }}" role="alert">
                {{ message }}
            </div>
            {% endfor %}
        </div>
        {% endfor %}
        <h1>Gerer les Biens</h1>        
        <hr class="border border-danger border-2 opacity-50">
        <div class="text-end">
            <a class="btn btn-primary" href="{{ path('app_admin_property_new') }}">Creer un nouveau bien</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Prix</th>
                    <th>Ville</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for property in properties %}
                <tr>
                    <td>{{ property.title }}</td>
                    <td>{{ property.description }}</td>
                    <td>{{ property.price }}</td>
                    <td>{{ property.city }}</td>
                    <td class="d-flex">
                        <a class="btn btn-secondary me-auto" href="{{ path('app_admin_property_show', {'id': property.id}) }}">
                            <i class="fa-solid fa-up-right-from-square"></i>
                        </a>
                        <a class="btn btn-info" href="{{ path('app_admin_property_edit', {'id': property.id}) }}">
                            <i class="fa-regular fa-pen-to-square" ></i>
                        </a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="11">no records found</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
